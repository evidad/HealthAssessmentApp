<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane id="AnchorPane" prefHeight="600.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1" fx:controller="healthassessmentapp.FXMLDocumentController">
   <children>
      <!-- Main Title -->
      <Label layoutX="250.0" layoutY="20.0" text="Individual Health Assessment" style="-fx-font-size: 22px; -fx-font-weight: bold;" />

      <!-- Patient Information -->
      <Label layoutX="80.0" layoutY="80.0" text="Patient Name:" style="-fx-font-size: 14px;" />
      <TextField fx:id="patientNameTextField" layoutX="200.0" layoutY="75.0" prefWidth="250.0" />

      <!-- Health Data Labels -->
      <Label layoutX="80.0" layoutY="130.0" text="Blood Pressure:" style="-fx-font-size: 14px;" />
      <Label layoutX="80.0" layoutY="180.0" text="Body Mass Index:" style="-fx-font-size: 14px;" />
      <Label layoutX="80.0" layoutY="230.0" text="Cholesterol LDL:" style="-fx-font-size: 14px;" />
      <Label layoutX="80.0" layoutY="280.0" text="Cholesterol HDL:" style="-fx-font-size: 14px;" />
      <Label layoutX="80.0" layoutY="330.0" text="Blood Glucose Level:" style="-fx-font-size: 14px;" />
      <Label layoutX="80.0" layoutY="380.0" text="Triglyceride:" style="-fx-font-size: 14px;" />

      <!-- Health Data Input Fields -->
      <TextField fx:id="bloodPressureTextField" layoutX="200.0" layoutY="125.0" prefWidth="120.0" />
      <TextField fx:id="bodyMassIndexTextField" layoutX="200.0" layoutY="175.0" prefWidth="120.0" />
      <TextField fx:id="cholestoralLDLTextField" layoutX="200.0" layoutY="225.0" prefWidth="120.0" />
      <TextField fx:id="cholestoralHDLTextField" layoutX="200.0" layoutY="275.0" prefWidth="120.0" />
      <TextField fx:id="bloodGlucoseLevelTextField" layoutX="200.0" layoutY="325.0" prefWidth="120.0" />
      <TextField fx:id="triglycerideTextField" layoutX="200.0" layoutY="375.0" prefWidth="120.0" />

      <!-- Enter Buttons -->
      <Button fx:id="bloodPressureButton" layoutX="340.0" layoutY="125.0" prefWidth="75.0" text="Enter" onAction="#handleBloodPressureButtonAction" />
      <Button fx:id="bodyMassIndexButton" layoutX="340.0" layoutY="175.0" prefWidth="75.0" text="Enter" onAction="#handleBodyMassIndexButtonAction" />
      <Button fx:id="cholestoralLDLButton" layoutX="340.0" layoutY="225.0" prefWidth="75.0" text="Enter" onAction="#handleCholestoralLDLButtonAction" />
      <Button fx:id="cholestoralHDLButton" layoutX="340.0" layoutY="275.0" prefWidth="75.0" text="Enter" onAction="#handleCholestoralHDLButtonAction" />
      <Button fx:id="bloodGlucoseLevelButton" layoutX="340.0" layoutY="325.0" prefWidth="75.0" text="Enter" onAction="#handleBloodGlucoseLevelButtonAction" />
      <Button fx:id="triglycerideButton" layoutX="340.0" layoutY="375.0" prefWidth="75.0" text="Enter" onAction="#handleTriglycerideButtonAction" />

      <!-- Comments Labels -->
      <Label fx:id="bloodPressureLabelComment" layoutX="440.0" layoutY="125.0" prefWidth="300.0" text="Comment" />
      <Label fx:id="bodyMassIndexLabelComment" layoutX="440.0" layoutY="175.0" prefWidth="300.0" text="Comment" />
      <Label fx:id="cholestoralLDLLabelComment" layoutX="440.0" layoutY="225.0" prefWidth="300.0" text="Comment" />
      <Label fx:id="cholesotralHDLLabelComment" layoutX="440.0" layoutY="275.0" prefWidth="300.0" text="Comment" />
      <Label fx:id="bloodGlucoseLevelComment" layoutX="440.0" layoutY="325.0" prefWidth="300.0" text="Comment" />
      <Label fx:id="triglycerideLabelComment" layoutX="440.0" layoutY="375.0" prefWidth="300.0" text="Comment" />

      <!-- File Operations and Report Status -->
      <TextField fx:id="fileNameTextField" layoutX="200.0" layoutY="440.0" prefWidth="300.0" promptText="Enter file name" />
      <Button fx:id="loadButton" layoutX="510.0" layoutY="440.0" prefWidth="75.0" text="Load" onAction="#handleLoadButtonAction" />
      <Button fx:id="saveButton" layoutX="590.0" layoutY="440.0" prefWidth="75.0" text="Save" onAction="#handleSaveButtonAction" />
      <Button fx:id="exitButton" layoutX="670.0" layoutY="440.0" prefWidth="75.0" text="Exit" onAction="#handleExitButtonAction" />

      <!-- Status Label for Report -->
      <Label fx:id="reportStatusLabel" layoutX="200.0" layoutY="500.0" prefWidth="400.0" alignment="CENTER" text="Report status will appear here." style="-fx-font-size: 14px;" />
   </children>
</AnchorPane>
